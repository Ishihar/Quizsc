<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.a171y005.quizsc.TitleActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/bt_gostd"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="273dp"
            android:layout_weight="0.1"
            android:background="@drawable/button"
            android:onClick="onClick"
            android:text="一覧"
            android:textColor="@android:color/background_light"
            android:textSize="30dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="16dp"
            android:layout_marginEnd="213dp"/>

        <Button
            android:id="@+id/bt_start"
            android:layout_width="228dp"
            android:layout_height="93dp"
            android:layout_weight="0.1"
            android:onClick="onClick"
            android:text="start"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimaryInverseDisableOnly"
            android:background="@drawable/button2"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.76"
            />

        <Button
            android:id="@+id/bt_add"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46dp"
            android:layout_weight="0.1"
            android:background="@drawable/button"
            android:onClick="onClick"
            android:text="単語一覧"
            android:textColor="@android:color/background_light"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_start"
            android:layout_marginRight="180dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.835"
            android:layout_marginEnd="180dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="595dp"
            android:layout_height="273dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="英単語学習"
            android:textAlignment="center"
            android:textSize="100sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/bt_start"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintVertical_bias="0.548"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="271dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:entries="@array/list"
            app:layout_constraintBottom_toTopOf="@+id/bt_start"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.803"
            tools:textAlignment="viewStart"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>

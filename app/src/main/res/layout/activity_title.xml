<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.a171y005.quizsc.TitleActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/bt_gostd"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="213dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.1"
            android:background="@drawable/button"
            android:onClick="onClick"
            android:text="学習状況"
            android:textColor="@android:color/background_light"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/bt_add"
            app:layout_constraintRight_toRightOf="@+id/bt_add"
            app:layout_constraintTop_toBottomOf="@+id/bt_add"
            app:layout_constraintVertical_bias="0.076"/>

        <Button
            android:id="@+id/bt_start"
            android:layout_width="230dp"
            android:layout_height="95dp"
            android:layout_weight="0.1"
            android:background="@drawable/button2"
            android:onClick="onClick"
            android:text="start"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimaryInverseDisableOnly"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.743"
            />

        <Button
            android:id="@+id/bt_add"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="180dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.1"
            android:background="@drawable/button"
            android:onClick="onClick"
            android:text="単語一覧"
            android:textColor="@android:color/background_light"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.783"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/bt_start"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/bt_start"
            app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="550dp"
            android:layout_height="270dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="英単語学習"
            android:textAlignment="center"
            android:textSize="100sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/bt_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.361"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="236dp"
            android:layout_height="72dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:entries="@array/list"
            app:layout_constraintBottom_toTopOf="@+id/bt_start"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.91"
            tools:scrollbarSize="@android:dimen/dialog_min_width_major"
            tools:textAlignment="viewStart"
            />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>

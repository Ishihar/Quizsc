<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.a171y005.quizsc.TitleActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/bt_gostd"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="213dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="213dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.1"
            android:background="@drawable/button"
            android:onClick="onClick"
            android:text="@string/app_std"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.036"
            app:layout_constraintLeft_toLeftOf="@+id/bt_add"
            app:layout_constraintRight_toRightOf="@+id/bt_add"
            app:layout_constraintTop_toBottomOf="@+id/bt_add"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/bt_start"
            android:layout_width="230dp"
            android:layout_height="95dp"
            android:layout_weight="0.1"
            android:background="@drawable/button2"
            android:onClick="onClick"
            android:text="@string/app_start"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimaryInverseDisableOnly"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.743"
            />

        <Button
            android:id="@+id/bt_add"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="180dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="180dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.1"
            android:background="@drawable/button"
            android:onClick="onClick"
            android:text="@string/app_word"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintLeft_toLeftOf="@+id/bt_start"
            app:layout_constraintRight_toRightOf="@+id/bt_start"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.782"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="550dp"
            android:layout_height="270dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/app_title"
            android:textAlignment="center"
            android:textSize="100sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/bt_start"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.341"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:background="@mipmap/spinner7"
            android:entries="@array/list"
            android:popupBackground="@drawable/simple"
            app:layout_constraintBottom_toTopOf="@+id/bt_start"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.897"
            tools:scrollbarSize="@android:dimen/dialog_min_width_major"
            tools:textAlignment="viewStart"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>

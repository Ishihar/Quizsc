<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinerLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.a171y005.quizsc.ResultActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tv_ccnt"
            android:layout_width="499dp"
            android:layout_height="104dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="42sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="51dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/bt_returnTitle"
            android:layout_width="156dp"
            android:layout_height="73dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button"
            android:text="@string/back_title"
            android:textColor="@android:color/background_light"
            android:textSize="19sp"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listtitle"/>

        <Button
            android:id="@+id/bt_next"
            android:layout_width="114dp"
            android:layout_height="60dp"
            android:layout_marginBottom="41dp"
            android:layout_marginEnd="34dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button"
            android:text="@string/next_q"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.847"
            app:layout_constraintLeft_toRightOf="@+id/bt_returnTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bt_returnTitle"
            app:layout_constraintVertical_bias="0.064"/>

        <TextView
            android:id="@+id/tv_cate"
            android:layout_width="226dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_ccnt"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/listtitle"
            app:layout_constraintHorizontal_bias="0.0"/>

        <ListView
            android:id="@+id/listtitle"
            android:layout_width="503dp"
            android:layout_height="405dp"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="29dp"
            android:background="@drawable/normal"
            android:divider="@null"
            android:dividerHeight="30dp"
            android:scrollbars="none"
            android:textAlignment="textStart"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_cate"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>


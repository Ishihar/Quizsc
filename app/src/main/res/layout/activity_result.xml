<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinerLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.a171y005.quizsc.ResultActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_ccnt"
            android:layout_width="500dp"
            android:layout_height="63dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="42sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/bt_returnTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.012"/>

        <Button
            android:id="@+id/bt_returnTitle"
            android:layout_width="156dp"
            android:layout_height="73dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="115dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="115dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button"
            android:text="タイトルへ戻る"
            android:textColor="@android:color/background_light"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listtitle"
            app:layout_constraintVertical_bias="0.876"/>

        <Button
            android:id="@+id/bt_next"
            android:layout_width="114dp"
            android:layout_height="60dp"
            android:layout_marginBottom="27dp"
            android:layout_marginEnd="34dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="34dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button"
            android:text="次の問題"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.979"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_returnTitle"
            app:layout_constraintVertical_bias="0.659"/>

        <ListView
            android:id="@+id/listtitle"
            android:layout_width="602dp"
            android:layout_height="602dp"
            android:layout_marginTop="114dp"
            android:background="@drawable/normal"
            android:divider="@null"
            android:dividerHeight="30dp"
            android:scrollbars="none"
            android:textAlignment="textStart"
            app:layout_constraintTop_toTopOf="@+id/tv_ccnt"
            tools:layout_editor_absoluteX="-1dp"/>

        <TextView
            android:id="@+id/tv_cate"
            android:layout_width="249dp"
            android:layout_height="33dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="18dp"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_ccnt"
            />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>

